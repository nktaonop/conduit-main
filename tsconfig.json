{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/components/signup/signup.tsx",
    "src/app/components/signin/signin.tsx",
    "src/app/components/main/main.jsx",
    "src/app/components/article-list/acrticle-list.tsx",
    "src/app/context/TagsContext.jsx",
    "src/app/components/popular-tags/popular-tags.jsx"
  ],
  "exclude": ["node_modules"]
}
